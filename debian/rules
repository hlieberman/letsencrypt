#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	PYBUILD_DIR=$(CURDIR)/acme dh $@ --with python2,sphinxdoc --buildsystem=pybuild
	PYBUILD_DIR=$(CURDIR) dh $@ --with python2,sphinxdoc --buildsystem=pybuild
	PYBUILD_DIR=$(CURDIR)/letsencrypt-apache dh $@ --with python2,sphinxdoc --buildsystem=pybuild
	PYBUILD_DIR=$(CURDIR)/letsencrypt-nginx dh $@ --with python2,sphinxdoc --buildsystem=pybuild

override_dh_install:
	dh_install --list-missing
