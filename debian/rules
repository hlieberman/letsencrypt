#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	SUB=acme PYBUILD_DIR=$(CURDIR)/${SUB} dh $@ --with python2,sphinxdoc --buildsystem=pybuild --without=dh_auto_test
	PYBUILD_DIR=$(CURDIR) dh $@ --with python2,sphinxdoc --buildsystem=pybuild
	SUB=letsencrypt-apache PYBUILD_DIR=$(CURDIR)/${SUB} dh $@ --with python2,sphinxdoc --buildsystem=pybuild --without=dh_auto_test
	SUB=letsencrypt-nginx PYBUILD_DIR=$(CURDIR)/${SUB} dh $@ --with python2,sphinxdoc --buildsystem=pybuild --without=dh_auto_test

override_dh_install:
	dh_install --list-missing

override_dh_auto_test:
	cd $(CURDIR)
	python2.7 -m nose --with-doctest ${SUB}
