#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --with python2,sphinxdoc

override_dh_clean:
	dh_auto_clean
	cd $(CURDIR)
	rm -rf venv

override_dh_auto_build:
	cd $(CURDIR)
	virtualenv --no-site-packages -p python2 venv
	./venv/bin/pip install acme/ ./ letsencrypt-apache/ letsencrypt-nginx/

override_dh_auto_test:
	cd $(CURDIR)
	export PYTHONPATH=$(CURDIR)/venv/lib/python2.7/site-packages/
	set -ex; for dir in acme . letsencrypt-apache letsencrypt-nginx; do \
		cd $(CURDIR)/$$dir; \
		nosetests; \
	done
